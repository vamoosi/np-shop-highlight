{
  "manifest_version": 2,
  "name": "Neopets Shop Highlighter",
  "description": "Highlights items in Neopets shops that appear on page refresh",
  "version": "1.10.3",


  "permissions": [
    "storage",
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.neopets.com/*"],
      "js": ["active-tab.js"]
    }
  ],
  
"browser_specific_settings": {
  "gecko": {
    "id": "addon@example.com",
    "strict_min_version": "42.0"
  }
},

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_popup": "action-menu.html"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+M",
        "mac": "Alt+M",
        "chromeos": "Alt+M",
        "linux": "Alt+M"
      }
    }
  },

  "options_ui": {
  "page": "settings-menu.html",
  "open_in_tab": false
  },
  "icons": {
    "16": "res/icon-16.png",
    "48": "res/icon-48.png",
    "128": "res/icon-128.png",
    "256": "res/icon-256.png"
  }
}
